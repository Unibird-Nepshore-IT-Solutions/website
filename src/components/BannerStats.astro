---
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const bannerStats = [
  {
    label: "projects_completed",
    value: "10+",
  },
  {
    label: "years_of_experience",
    value: "7+",
  },
  {
    label: "clients_involved",
    value: "100",
  },
  {
    label: "lets_get_started",
    value: t("hero.got_any_project"),
  },
];
---

<div
  class="w-full h-full px-6 py-6 md:px-10 lg:pl-28 lg:pr-12 grid grid-cols-2 lg:flex lg:items-center lg:justify-between gap-6 md:gap-8 bg-background/90 backdrop-blur-md border border-border shadow-sm rounded-xl lg:rounded-none lg:border-l-0 lg:border-r-0 lg:shadow-none transition-all duration-300 hover:shadow-md"
>
  {
    bannerStats.map((stat) => (
      <div class="flex flex-col gap-1 group">
        <h4 class="text-xl md:text-2xl font-extrabold text-primary group-hover:scale-105 transition-transform duration-300">
          {stat.value}
        </h4>
        {stat.label === "lets_get_started" ? (
          <a
            href="#contact"
            class="text-xs md:text-sm text-secondary-text font-medium uppercase tracking-wider underline"
          >
            {t("hero.lets_get_started")}
          </a>
        ) : (
          <p class="text-xs md:text-sm text-secondary-text font-medium uppercase tracking-wider">
            {t(`hero.${stat.label}`)}
          </p>
        )}
      </div>
    ))
  }
</div>
