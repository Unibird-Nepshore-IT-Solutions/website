---
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import Image from "astro/components/Image.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  id="about-us"
  class="py-12 md:py-24 px-6 md:px-12 lg:pl-28 lg:pr-12 bg-accent flex gap-10 flex-col-reverse lg:flex-row"
>
  <!-- Left Section -->
  <div class="w-full lg:w-1/2">
    <div class="flex flex-col sm:flex-row gap-4 mb-4">
      <div
        class="w-full sm:w-[55%] h-[300px] md:h-[420px] 2xl:h-[550px] overflow-hidden"
      >
        <Image
          width={304}
          height={800}
          alt="About Us"
          src={import.meta.env.BASE_URL + "assets/images/about_us_1.webp"}
          class="w-full h-full object-cover block"
        />
      </div>
      <div
        class="w-full sm:w-[45%] h-[300px] md:h-[420px] 2xl:h-[550px] overflow-hidden py-4"
      >
        <Image
          width={264}
          height={500}
          alt="About Us"
          src={import.meta.env.BASE_URL + "assets/images/about_us_2.webp"}
          class="w-full h-full object-cover block"
        />
      </div>
    </div>

    <h5 class="text-base font-bold mt-4">
      {t("about.get_close_to_more_professionals")}
    </h5>
    <p class="text-sm text-secondary-text">
      {t("about.receive_the_greatest_results")}
    </p>
  </div>

  <!-- Right Section -->
  <div class="w-full lg:w-1/2 flex flex-col gap-4">
    <h2 class="text-base text-secondary">
      {t("about.about_us")}
    </h2>
    <h3 class="text-3xl md:text-4xl lg:text-[40px] font-bold">
      {t("about.empowering_business")}
    </h3>
    <p class="text-secondary-text">{t("about.empowering_business_desc")}</p>

    <div class="border border-border my-4"></div>

    <div class="flex flex-col sm:flex-row gap-8">
      <div class="flex-1">
        <h4 class="font-bold mb-2">{t("about.best_in_business")}</h4>
        <p class="text-secondary-text">{t("about.best_in_business_desc")}</p>
      </div>
      <div class="flex-1">
        <h4 class="font-bold mb-2">{t("about.247_support")}</h4>
        <p class="text-secondary-text">{t("about.247_support_desc")}</p>
      </div>
    </div>
  </div>
</section>
