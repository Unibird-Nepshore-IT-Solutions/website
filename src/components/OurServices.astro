---
import ServiceCard from "./ServiceCard.astro";
import Image from "astro/components/Image.astro";

import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  id="our-services"
  class="py-12 md:py-24 px-6 md:px-12 lg:pl-28 lg:pr-12"
>
  <h2 class="text-base text-secondary text-center">
    {t("services.our_services")}
  </h2>
  <h3 class="text-3xl md:text-4xl lg:text-[40px] font-bold text-center">
    {t("services.tailored_professional_assistance")}
  </h3>

  <div class="flex flex-col lg:flex-row justify-between gap-6 mt-10">
    <div class="flex flex-col gap-6 w-full lg:w-1/3">
      <ServiceCard
        icon={import.meta.env.BASE_URL + "assets/svgs/web_dev.svg"}
        title={t("services.web_development")}
        description={t("services.web_development_desc")}
      />
      <ServiceCard
        icon={import.meta.env.BASE_URL + "assets/svgs/it_support.svg"}
        title={t("services.it_support_and_maintenance")}
        description={t("services.it_support_and_maintenance_desc")}
      />
    </div>
    <div class="w-full lg:w-1/3 h-full overflow-hidden hidden xl:block">
      <Image
        width={352}
        height={500}
        alt="Our Services"
        src={import.meta.env.BASE_URL + "assets/images/services.webp"}
        class="max-w-full h-full object-cover block mx-auto"
      />
    </div>
    <div class="flex flex-col gap-6 w-full lg:w-1/3">
      <ServiceCard
        icon={import.meta.env.BASE_URL + "assets/svgs/web_dev.svg"}
        title={t("services.e_commerce_solution")}
        description={t("services.e_commerce_solution_desc")}
      />
      <ServiceCard
        icon={import.meta.env.BASE_URL + "assets/svgs/it_support.svg"}
        title={t("services.cloud_and_hosting")}
        description={t("services.cloud_and_hosting_desc")}
      />
    </div>
  </div>
</section>
