---
import Image from "astro/components/Image.astro";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const products = [
  {
    id: "mbn",
    title: t("products.mbn"),
    description: t("products.mbn_desc"),
    features: [
      t("products.mbn_feature_1"),
      t("products.mbn_feature_2"),
      t("products.mbn_feature_3"),
    ],
    image: "/assets/images/mbn-1.webp",
  },
  {
    id: "skysales",
    title: t("products.skysales"),
    description: t("products.skysales_desc"),
    features: [
      t("products.skysales_feature_1"),
      t("products.skysales_feature_2"),
      t("products.skysales_feature_3"),
    ],
    image: "/assets/images/skysales-1.webp",
  },
];
---

<section
  id="our-products"
  class="py-12 md:py-24 px-6 md:px-12 lg:pl-28 lg:pr-12"
>
  <h2 class="text-base text-secondary text-center">
    {t("products.our_products")}
  </h2>
  <h3 class="text-3xl md:text-4xl lg:text-[40px] font-bold text-center">
    {t("products.empowering_your_digital_future")}
  </h3>

  <div class="grid grid-cols-1 mt-10">
    {
      products.map((product, index) => (
        <div class={`fade-slide slide-${index + 1} [grid-area:1/1]`}>
          <div class="flex flex-col-reverse lg:flex-row gap-10 items-center lg:items-start pb-8">
            {/* Left Section */}
            <div class="w-full lg:w-1/2 flex flex-col gap-4 text-center lg:text-left">
              <h4 class="font-bold text-2xl md:text-[32px]">{product.title}</h4>
              <p class="text-sm md:text-base leading-relaxed">
                {product.description}
              </p>
              <h5 class="font-bold text-lg md:text-xl">
                {t("products.key_features")}
              </h5>
              <ul class="list-disc flex flex-col gap-2 text-left px-4 md:px-6 lg:px-4">
                {product.features.map((feature) => (
                  <li class="text-sm md:text-base">{feature}</li>
                ))}
              </ul>
            </div>

            {/* Right Section */}
            <div class="w-full lg:w-1/2 flex items-center justify-center">
              <div class="relative w-full max-w-[280px] sm:max-w-[350px] aspect-square">
                {/* Circle background */}
                <div class="absolute inset-0 rounded-full bg-accent" />
                <Image
                  width={300}
                  height={300}
                  alt="Our Product"
                  src={product.image}
                  class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[110%] h-auto max-w-none object-contain"
                />
              </div>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>

<style>
  .fade-slide {
    width: 100%;
    opacity: 0;
    animation: fadeSlide 8s infinite ease-in-out;
    pointer-events: none;
  }

  .fade-slide.slide-1 {
    animation-delay: 0s;
  }

  .fade-slide.slide-2 {
    animation-delay: 4s;
  }

  /* Only allow pointer events for the semi-visible slide to avoid clicking hidden links (if any) */
  @keyframes fadeSlide {
    0%,
    45% {
      opacity: 1;
      pointer-events: auto;
    }
    50%,
    95% {
      opacity: 0;
      pointer-events: none;
    }
    100% {
      opacity: 1;
      pointer-events: auto;
    }
  }
</style>
