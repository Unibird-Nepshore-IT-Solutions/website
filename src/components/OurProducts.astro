---
import Image from "astro/components/Image.astro";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const products = [
  {
    id: "mbn",
    title: t("products.mbn"),
    description: t("products.mbn_desc"),
    features: [
      t("products.mbn_feature_1"),
      t("products.mbn_feature_2"),
      t("products.mbn_feature_3"),
    ],
    image:
      import.meta.env.BASE_URL.replace(/\/$/, "") + "/assets/images/mbn-1.webp",
  },
  {
    id: "skysales",
    title: t("products.skysales"),
    description: t("products.skysales_desc"),
    features: [
      t("products.skysales_feature_1"),
      t("products.skysales_feature_2"),
      t("products.skysales_feature_3"),
    ],
    image:
      import.meta.env.BASE_URL.replace(/\/$/, "") +
      "/assets/images/skysales-1.webp",
  },
];
---

<section
  id="our-products"
  class="py-12 md:py-24 px-6 md:px-12 lg:pl-28 lg:pr-12"
>
  <h2 class="text-base text-secondary text-center">
    {t("products.our_products")}
  </h2>
  <h3 class="text-2xl md:text-4xl lg:text-[40px] font-bold text-center">
    {t("products.empowering_your_digital_future")}
  </h3>

  <div class="grid grid-cols-1 mt-10">
    {
      products.map((product, index) => (
        <div class={`fade-slide slide-${index + 1} [grid-area:1/1]`}>
          <div class="flex flex-col-reverse lg:flex-row gap-16 items-center pb-8">
            {/* Left Section */}
            <div class="w-full lg:w-3/5 flex flex-col gap-4 text-center lg:text-left py-4">
              <h4 class="font-bold text-3xl md:text-[40px] leading-tight text-primary">
                {product.title}
              </h4>
              <p class="text-sm md:text-base leading-relaxed text-secondary-text">
                {product.description}
              </p>
              <h5 class="font-bold text-lg md:text-xl mt-4">
                {t("products.key_features")}
              </h5>
              <ul class="list-disc flex flex-col gap-2 text-left px-4 md:px-6 lg:px-4">
                {product.features.map((feature) => (
                  <li class="text-sm md:text-base text-secondary-text">
                    {feature}
                  </li>
                ))}
              </ul>
            </div>

            {/* Right Section */}
            <div class="w-full lg:w-2/5 flex items-center justify-center pt-8 lg:pt-0">
              <div class="relative w-full max-w-[260px] sm:max-w-[400px] aspect-square flex items-center justify-center group">
                {/* Background Full Circle */}
                <div class="absolute inset-4 rounded-full bg-accent/60 transition-all duration-500 group-hover:bg-accent group-hover:scale-101 shadow-inner" />

                <div class="relative w-full h-full transform transition-all duration-500 group-hover:translate-y-[-10px] group-hover:scale-101 flex items-center justify-center">
                  <Image
                    width={500}
                    height={500}
                    alt={product.title}
                    src={product.image}
                    class="w-full h-full object-contain scale-105 md:scale-110 drop-shadow-[0_20px_40px_rgba(0,0,0,0.15)] group-hover:drop-shadow-[0_30px_60px_rgba(0,0,0,0.25)]"
                  />
                </div>
              </div>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>

<style>
  .fade-slide {
    width: 100%;
    opacity: 0;
    animation: fadeSlide 8s infinite ease-in-out;
    pointer-events: none;
  }

  .fade-slide.slide-1 {
    animation-delay: 0s;
  }

  .fade-slide.slide-2 {
    animation-delay: 4s;
  }

  /* Only allow pointer events for the semi-visible slide to avoid clicking hidden links (if any) */
  @keyframes fadeSlide {
    0%,
    45% {
      opacity: 1;
      pointer-events: auto;
    }
    50%,
    95% {
      opacity: 0;
      pointer-events: none;
    }
    100% {
      opacity: 1;
      pointer-events: auto;
    }
  }
</style>
