---
import { languages } from "@/i18n/ui";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

import FAQs from "@/components/FAQs.astro";
import Banner from "@/components/Banner.astro";
import AboutUs from "@/components/AboutUs.astro";
import Contacts from "@/components/Contacts.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import OurServices from "@/components/OurServices.astro";
import OurProducts from "@/components/OurProducts.astro";
import WhereWeWork from "@/components/WhereWeWork.astro";
import Testimonials from "@/components/Testimonials.astro";

export const getStaticPaths = () =>
  Object.keys(languages).map((locale) => ({ params: { locale } }));

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout title={t("title")}>
  <Banner />
  <OurServices />
  <AboutUs />
  <OurProducts />
  <Testimonials />
  <WhereWeWork />
  <FAQs />
  <Contacts />
</BaseLayout>
